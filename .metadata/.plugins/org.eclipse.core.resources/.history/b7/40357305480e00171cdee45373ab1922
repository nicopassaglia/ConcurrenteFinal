package Monitor;
import java.util.ArrayList;

import Extra.Matriz;

public class RDP {
	
	public int[][] marcado;
	public int[][] incidencia;
	
	public RDP(int[][] marcadoInicial, int[][] incidencia){
		this.marcado = marcadoInicial;
		this.incidencia = incidencia;
	}
	
	public Matriz sensibilizadas(){
		Matriz marcadoM = new Matriz(this.marcado);
		Matriz incidenciaM = new Matriz(this.incidencia);
		Matriz sensibilizadas = new Matriz(1,incidenciaM.getColCount());
		
		for(int i=0;i<incidenciaM.getColCount();i++){
			int transicion = 1;
			for(int j=0;j<incidenciaM.getFilCount();j++){
				
					if(marcadoM.getVal(0, i)>=incidenciaM.getVal(i, j)){
						continue;
					}else{
						transicion = 0;
						break;
					}
			}
			sensibilizadas.setDato(0, i, transicion);
		}
		
		
		return sensibilizadas;
	}
	
	public void disparar(){
		
		
	}
	
	public int[][] getMarcado(){
		return this.marcado;
	}
	
	public int[][] getIncidencia(){
		return this.incidencia;
	}
}
